# Get an EditorConfig plugin for your text editor:
# https://editorconfig.org/#download

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[*.md]
indent_size = 4
end_of_line = lf

[Makefile]
indent_style = tab
indent_size = 2
end_of_line = lf
